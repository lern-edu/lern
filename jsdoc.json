{
  "plugins" : ["plugins/markdown"],
  "source": {
    "include": [
      "packages/lern-check",
      "packages/lern-check/lib",

      "packages/lern-head",
      "packages/lern-head/client",

      "packages/lern-layouts",
      "packages/lern-layouts/mixins",
      "packages/lern-layouts/components",

      "packages/lern-model",
      "packages/lern-model/collections",
      "packages/lern-model/collections/users",

      "client"
    ],
    "exlude": ["node_modules", ".git", ".meteor"]
  },
  "sourceType": "module",
  "opts": {
    "encoding": "utf8",
    "destination": "./docs",
    "readme": "README.md"
  }
}
